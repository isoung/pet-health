{
  "compilerOptions": {
    "baseUrl": "src",
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": [
      "dom",
      "es5",
      "es2015",
      "es2015.promise",
      "es2016",
      "esnext.asynciterable"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "strictNullChecks": false,
    "target": "ES5"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./**/*.ts",
    "./**/*.tsx"
  ]
}
